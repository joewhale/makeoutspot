<h1 class="title">all the places</h1>


<div class="col-10 offset-1">
  <% @places.each do |f| %>
    <h2><%= f.name %></h2>
    <p><%= f.address %></p>
    <p><%= f.description %></p>
    <% if f.user.present? %>
      <small><%= f.user.email %></small>
    <% end %>
    <hr>

  <% end %>
</div>

<div class="pag">
  <%= paginate @places %>
</div>
